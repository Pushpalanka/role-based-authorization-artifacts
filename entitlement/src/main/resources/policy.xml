<Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="authorizeDrinks"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" Version="1.0">
    <Target>
        <AnyOf>
            <AllOf>
                <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">/drink</AttributeValue>
                    <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
                                         Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                                         DataType="http://www.w3.org/2001/XMLSchema#string"
                                         MustBePresent="true"></AttributeDesignator>
                </Match>
            </AllOf>
        </AnyOf>
    </Target>
    <Rule Effect="Permit" RuleId="Rule_for_polish">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">polish</AttributeValue>
                        <AttributeDesignator AttributeId="http://wso2.org/claims/role"
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">vodka</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">water</AttributeValue>
                </Apply>
                <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                     Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                     DataType="http://www.w3.org/2001/XMLSchema#string"
                                     MustBePresent="true"></AttributeDesignator>
            </Apply>
        </Condition>
    </Rule>
    <Rule Effect="Permit" RuleId="Rule_for_french">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">french</AttributeValue>
                        <AttributeDesignator AttributeId="http://wso2.org/claims/role"
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">champagne</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">water</AttributeValue>
                </Apply>
                <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                     Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                     DataType="http://www.w3.org/2001/XMLSchema#string"
                                     MustBePresent="true"></AttributeDesignator>
            </Apply>
        </Condition>
    </Rule>
    <Rule Effect="Permit" RuleId="Rule_for_british">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">british</AttributeValue>
                        <AttributeDesignator AttributeId="http://wso2.org/claims/role"
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">gin</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">water</AttributeValue>
                </Apply>
                <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                     Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                     DataType="http://www.w3.org/2001/XMLSchema#string"
                                     MustBePresent="true"></AttributeDesignator>
            </Apply>
        </Condition>
    </Rule>
    <Rule Effect="Permit" RuleId="Rule_for_srilankan">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">srilankan</AttributeValue>
                        <AttributeDesignator AttributeId="http://wso2.org/claims/role"
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">arrack</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">water</AttributeValue>
                </Apply>
                <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                     Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                     DataType="http://www.w3.org/2001/XMLSchema#string"
                                     MustBePresent="true"></AttributeDesignator>
            </Apply>
        </Condition>
    </Rule>
    <Rule Effect="Permit" RuleId="Rule_to_allow_list_drinks">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">list</AttributeValue>
                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
    </Rule>
    <Rule Effect="Permit" RuleId="Rule_for_srilankan">
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">citizen-of-the-world
                        </AttributeValue>
                        <AttributeDesignator AttributeId="http://wso2.org/claims/role"
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"
                                             MustBePresent="true"></AttributeDesignator>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">arrack</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">water</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">gin</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">champagne</AttributeValue>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">vodka</AttributeValue>
                </Apply>
                <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                     Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                     DataType="http://www.w3.org/2001/XMLSchema#string"
                                     MustBePresent="true"></AttributeDesignator>
            </Apply>
        </Condition>
    </Rule>
    <Rule Effect="Deny" RuleId="Rule_deny_all"></Rule>
</Policy>        